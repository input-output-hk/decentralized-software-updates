name:                decentralized-updates
version:             0.1.0.0
synopsis:            Decentralized updates for Cardano
description:         A prototype for a decentralized update mechanism for Cardano
license:             Apache
license-file:        LICENSE
author:              IO Research and IOHK Formal Methods Team
maintainer:          formal.methods@iohk.io
copyright:           2019 IOHK
category:            Currency
build-type:          Simple
extra-source-files:  README.md
cabal-version:       >=1.10

library
  hs-source-dirs:      src
  exposed-modules:     Cardano.Ledger.Generators
                     , Cardano.Ledger.Generators.QuickCheck
                     , Cardano.Ledger.Spec.STS.Chain.Chain
                     , Cardano.Ledger.Spec.STS.Chain.Header
                     , Cardano.Ledger.Spec.STS.Chain.Body
                     , Cardano.Ledger.Spec.STS.Chain.Data
                     , Cardano.Ledger.Spec.STS.Chain.Transaction
                     , Cardano.Ledger.Spec.STS.Dummy.UTxO
                     , Cardano.Ledger.Spec.STS.Sized
                     , Cardano.Ledger.Spec.STS.Update
                     , Cardano.Ledger.Spec.STS.Update.Hupdate
                     , Cardano.Ledger.Spec.STS.Update.Tallysip
                     , Cardano.Ledger.Spec.STS.Update.Data
                     , Cardano.Ledger.Spec.STS.Update.Ideation
                     , Cardano.Ledger.Spec.STS.Update.Implementation
                     , Cardano.Ledger.Spec.STS.Update.Definitions
  build-depends:       base >=4.11 && <5
                     , bimap >= 0.4.0
                     , containers
                     , cryptonite
                     , generic-monoid
                     , hedgehog >= 1.0
                     , QuickCheck
                     , text
                     -- Cardano specific imports
                     , cardano-binary
                     , cardano-crypto-class
                     , small-steps
                     , cs-ledger
  default-language:    Haskell2010
  ghc-options:        -Wall
                      -Wcompat
                      -Wincomplete-record-updates
                      -Wincomplete-uni-patterns
                      -Wredundant-constraints

test-suite ledger-rules-test
  hs-source-dirs:      test
  main-is:             Main.hs
  type:                exitcode-stdio-1.0
  other-modules:       Cardano.Ledger.Spec.STS.Chain.Chain.Properties
                     , Cardano.Ledger.Spec.STS.Update.Ideation.Properties
  default-language:    Haskell2010
  build-depends:       base
                     , containers
                     , hedgehog >= 1.0
                     , tasty
                     , tasty-hunit
                     , tasty-hedgehog
                     , QuickCheck
                     , tasty-quickcheck
                     -- Cardano specific imports
                     , cardano-crypto-class
                     , decentralized-updates
                     , cs-ledger
                     , small-steps
  ghc-options:         -Wall
                       -Wcompat
                       -Wincomplete-record-updates
                       -Wincomplete-uni-patterns
                       -Wredundant-constraints
                       -- We set a bound here so that we're alerted of potential
                       -- space leaks in our generators (or test) code.
                       --
                       -- The 4 megabytes stack bound and 150 megabytes heap bound were
                       -- determined ad-hoc.
                       "-with-rtsopts=-K1m -M150m"
                       -threaded
                       -rtsopts
